<%include header.ejs%>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=blog.name%></div>
    <form class="ui form" action="/blogs/<%=blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[name]" value="<%=blog.name%>" placeholder="title">
        </div>
        <div class="field">
            <label>image</label>
            <input type="text" name="blog[image]" value="<%=blog.image%>" placeholder="image">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"><%=blog.body%></textarea>
        </div>
        <button class="ui green big basic button">Submit</button>
    </form>
</div>
<%include footer.ejs%>